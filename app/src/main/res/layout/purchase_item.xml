<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="purchase"
            type="org.kl.smartbuy.model.Purchase" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:minHeight="64dp">

        <ImageView
            android:id="@+id/item_purchase_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:paddingRight="8dp"
            android:src="@drawable/purchase_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="4dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_purchase_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                app:fontFamily="Roboto Regular"
                android:textColor="@color/gray_color"

                android:layout_weight="4"
                android:textSize="14sp"
                android:text="@{purchase.name}">
            </TextView>

            <TextView
                android:id="@+id/date_purchase_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                app:fontFamily="Roboto Regular"
                android:textColor="@color/gray_color"

                android:layout_weight="1"
                android:textSize="12sp"
                android:text="@{purchase.date}">
            </TextView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/edit_purchase_image"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="4dp"
                    android:paddingStart="4dp"
                    android:paddingRight="4dp"
                    android:paddingEnd="4dp"

                    android:layout_width="32dp"
                    android:layout_height="32dp"

                    android:visibility="invisible"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackgroundBorderless"

                    android:src="@drawable/edit_icon" />

                <ImageView
                    android:id="@+id/delete_purchase_image"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                   android:paddingLeft="4dp"
                    android:paddingStart="4dp"
                    android:paddingRight="4dp"
                    android:paddingEnd="4dp"

                    android:layout_width="32dp"
                    android:layout_height="32dp"

                    android:visibility="invisible"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackgroundBorderless"

                    android:src="@drawable/delete_icon" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>