<resources>

    <style name="Base.Theme.Smartbuy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/gray_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorOnSurface">@color/white_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="android:colorBackground">@color/white_color</item>
        <item name="android:actionMenuTextColor">@color/black_color</item>
        <item name="searchViewStyle">@style/AppSearchViewStyle</item>
    </style>

    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="queryHint">@string/search_hint</item>
        <item name="android:imeActionId">6</item>
    </style>

    <style name="Theme.Smartbuy" parent="Base.Theme.Smartbuy"/>

    <style name="Theme.Smartbuy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Smartbuy.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>
</resources>
